<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragments.NovaNotaFragment">

    <EditText
        android:id="@+id/TitolNotaC"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/NotesBar"
        android:padding="11dp"
        android:text="Titol"
        android:textSize="20dp"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <ImageView
        android:id="@+id/cancelarC"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="7dp"
        android:background="@drawable/rounded_border"
        android:src="@drawable/cancelar"
        android:padding="6dp"
        app:tint="@color/Filtres"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <ImageView
        android:id="@+id/guardarC"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:layout_marginTop="7dp"
        android:background="@drawable/rounded_border"
        android:src="@drawable/guardar"
        android:padding="6dp"
        app:tint="@color/Filtres"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <ImageView
        android:id="@+id/MenuNotes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="10dp"
        android:src="@drawable/menu"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <EditText
        android:id="@+id/textC"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="49dp"
        android:background="@android:color/transparent"
        android:gravity="top|start"
        android:hint="Escriu la teva nota aquÃ­..."
        android:inputType="textMultiLine"
        android:padding="16dp"
        android:textSize="20dp"
        app:layout_constraintTop_toBottomOf="@+id/TitolNotaC" />

</androidx.constraintlayout.widget.ConstraintLayout>